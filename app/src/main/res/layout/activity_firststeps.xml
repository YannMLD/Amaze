<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.FirstStepsActivity">
    <android.support.v4.view.ViewPager
            android:id="@+id/welcome_viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"/>

    <android.support.design.widget.TabLayout
            android:id="@+id/welcome_tabLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/welcome_viewPager"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp">
    </android.support.design.widget.TabLayout>

    <Button
            android:drawableEnd="@drawable/chevron_right"
            android:text="@string/next_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/welcome_nextButton"
            android:textColor="@color/ColorBlackSecondary"
            android:background="@color/transparent"
            android:textAllCaps="false"
            android:layout_marginEnd="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>