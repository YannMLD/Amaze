<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             tools:context=".fragments.LoginFragment"
             android:visibility="visible"
             android:id="@+id/loginFrameLayout">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_width="209dp"
                android:layout_height="165dp"
                app:srcCompat="@drawable/people_group_login"
                android:id="@+id/imageView2"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.8"
                android:scaleType="fitCenter"
                android:visibility="visible"/>

        <TextView
                android:text="Login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView2"
                app:layout_constraintHorizontal_bias="0.0"/>

        <TextView
                android:text="Please SigIn in to continue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textColor="@color/colorBlackText"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"/>

        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Please enter your email"
                android:textColorHint="@color/colorEditTextHintColor"
                android:drawablePadding="16dp"
                android:paddingLeft="0sp"
                android:paddingRight="0dp"
                android:maxLines="1"
                android:drawableLeft="@drawable/close_envelope"
                android:ems="10"
                android:id="@+id/loginIdentifierTextview"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                android:paddingBottom="@dimen/edittext_padding_bottom">

            <requestFocus/>

        </EditText>

        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/signUpPasswordTextview"
                android:textColorHint="@color/colorEditTextHintColor"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/loginIdentifierTextview"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:hint="Please enter your password"
                android:drawableLeft="@drawable/password_locker"
                android:drawablePadding="16dp"
                android:paddingBottom="@dimen/edittext_padding_bottom"/>

        <Button
                android:text="Login"
                android:textColor="#FFFFFF"
                android:background="@drawable/login_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/loginLocalConnectButton"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/signUpPasswordTextview"
                android:textAllCaps="false"
                android:fontFamily="@font/open_sans"
                android:textSize="@dimen/name_font_size"/>

        <Button
                android:text="Login with Facebook"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/name_font_size"
                android:background="@drawable/login_button"
                android:backgroundTint="#42A9C3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:textAllCaps="false"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/loginLocalConnectButton"
                android:fontFamily="@font/open_sans"/>

        <TextView
                android:text="Forgot password ? Reset here"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/button2"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"/>

        <TextView
                android:text="Donâ€™t have an account? Swipe right to create a new account."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.461"
                app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    </android.support.constraint.ConstraintLayout>

</FrameLayout>