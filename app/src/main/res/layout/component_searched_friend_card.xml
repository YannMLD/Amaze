<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:id="@+id/searchedFriendCard">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/searchFriendProfilImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/john_doe"
            app:civ_border_color="#FF000000"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchFriendName"
            tools:text="Jean Philippe"
            android:textSize="@dimen/button_font_size"
            android:fontFamily="@font/open_sans_light"
            android:textColor="@color/ColorBlackSecondary"
            app:layout_constraintStart_toEndOf="@+id/searchFriendProfilImage"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/searchFriendProfilImage"
            app:layout_constraintBottom_toBottomOf="@+id/searchFriendProfilImage"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchedFriendUsername"
            tools:text="@JP90"
            android:textSize="@dimen/number_of_product_into_basket_font_size"
            android:textColor="@color/colorBlueGreyLow"
            android:fontFamily="@font/open_sans_light"
            app:layout_constraintStart_toEndOf="@+id/searchFriendName"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.89"
            app:layout_constraintTop_toTopOf="@+id/searchFriendProfilImage"
            app:layout_constraintBottom_toBottomOf="@+id/searchFriendProfilImage"/>

</android.support.constraint.ConstraintLayout>