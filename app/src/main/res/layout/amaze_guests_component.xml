<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:background="@drawable/custom_card"
                                             android:visibility="visible">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView27"
            android:textSize="@dimen/big_title_font_size"
            android:fontFamily="@font/open_sans_bold"
            android:textColor="@color/ColorBlackSecondary"
            android:text="@string/guests"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/guests_comming"
            android:id="@+id/imageView6"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView27"
            app:layout_constraintStart_toStartOf="@+id/textView27"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/amazeGuestsComming"
            tools:text="30"
            android:textSize="@dimen/button_font_size"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/ColorBlackSecondary"
            app:layout_constraintTop_toTopOf="@+id/imageView6"
            app:layout_constraintBottom_toBottomOf="@+id/imageView6"
            app:layout_constraintStart_toEndOf="@+id/imageView6"
            android:layout_marginStart="8dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/amazeGuestsNotComming"
            tools:text="0"
            android:textSize="@dimen/button_font_size"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/ColorBlackSecondary"
            app:layout_constraintTop_toTopOf="@+id/imageView10"
            app:layout_constraintBottom_toBottomOf="@+id/imageView10"
            app:layout_constraintStart_toEndOf="@+id/imageView10"
            android:layout_marginStart="8dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/amazeGuestsMaybe"
            tools:text="23"
            android:textSize="@dimen/button_font_size"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/ColorBlackSecondary"
            app:layout_constraintTop_toTopOf="@+id/imageView11"
            app:layout_constraintBottom_toBottomOf="@+id/imageView11"
            app:layout_constraintEnd_toEndOf="@+id/textView27"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/guests_not_comming"
            android:id="@+id/imageView10"
            app:layout_constraintTop_toTopOf="@+id/imageView6"
            app:layout_constraintStart_toStartOf="@+id/guideline4"
            />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/guests_maybe"
            android:id="@+id/imageView11"
            app:layout_constraintEnd_toStartOf="@+id/amazeGuestsMaybe"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageView10"/>

    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline4"
            tools:visibility="invisible"
            app:layout_constraintGuide_begin="187dp"/>

    <Button
            android:text="View all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            app:layout_constraintStart_toStartOf="@+id/textView27"
            app:layout_constraintEnd_toEndOf="@+id/textView27"
            tools:visibility="visible"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView10"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"/>
</android.support.constraint.ConstraintLayout>