<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="wrap_content"
                                             android:layout_height="match_parent">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nextButtonText"
            tools:text="Next"
            android:fontFamily="@font/open_sans_bold"
            android:textSize="@dimen/h4_font_size"
            android:textColor="@color/ColorBlackSecondary"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/chevron_right"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/nextButtonText"
            app:layout_constraintStart_toEndOf="@+id/nextButtonText"
            app:layout_constraintBottom_toBottomOf="@+id/nextButtonText"
            app:layout_constraintEnd_toEndOf="parent"
            />
</android.support.constraint.ConstraintLayout>