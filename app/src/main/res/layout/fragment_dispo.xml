<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.DispoFragment">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:src="@drawable/calendar_symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView5"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="40dp"/>

            <TextView
                    android:text="@string/textfield_disponibilities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    app:layout_constraintTop_toTopOf="@+id/imageView5"
                    app:layout_constraintStart_toEndOf="@+id/imageView5"
                    android:layout_marginStart="10dp"
                    android:textColor="#F47155"/>

            <TextView
                    android:text="@string/customize_disponibilities"
                    android:layout_width="335dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    app:layout_constraintStart_toStartOf="@+id/imageView5"
                    app:layout_constraintTop_toBottomOf="@+id/imageView5"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/colorBlackText"/>

            <TextView
                    android:text="@string/pick_no_dispo"
                    android:layout_width="335dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    app:layout_constraintTop_toBottomOf="@+id/textView6"
                    app:layout_constraintStart_toStartOf="@+id/textView6"
                    android:layout_marginTop="30dp"
                    android:textColor="#515C6F"/>

            <Button
                    android:text="@string/add_no_dispo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button6"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView7"
                    app:layout_constraintStart_toStartOf="@+id/textView7"
                    />

            <TextView
                    android:text="@string/available_weekend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    app:layout_constraintTop_toBottomOf="@+id/button6"
                    app:layout_constraintStart_toStartOf="@+id/button6"
                    android:textColor="#F47155"
                    android:layout_marginTop="30dp"/>

            <CheckBox
                    android:text="@string/morning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox"
                    app:layout_constraintTop_toBottomOf="@+id/textView9"
                    app:layout_constraintStart_toStartOf="@+id/textView9"
                    android:layout_marginTop="20dp"/>

            <CheckBox
                    android:text="@string/midday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox2"
                    app:layout_constraintTop_toTopOf="@+id/checkBox"
                    app:layout_constraintStart_toEndOf="@+id/checkBox"
                    android:layout_marginStart="20dp"/>

            <CheckBox
                    android:text="@string/evening"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox3"
                    app:layout_constraintStart_toEndOf="@+id/checkBox2"
                    android:layout_marginStart="20dp"
                    app:layout_constraintTop_toTopOf="@+id/checkBox2"/>

            <CheckBox
                    android:text="@string/night"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox4"
                    app:layout_constraintTop_toBottomOf="@+id/checkBox"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="@+id/checkBox"
                    />

            <CheckBox
                    android:text="@string/latenight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox5"
                    app:layout_constraintStart_toStartOf="@+id/checkBox2"
                    app:layout_constraintTop_toTopOf="@+id/checkBox4"/>

            <TextView
                    android:text="@string/available_weekdays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView10"
                    android:textColor="#F47155"
                    app:layout_constraintStart_toStartOf="@+id/textView9"
                    app:layout_constraintTop_toBottomOf="@+id/checkBox4"
                    android:layout_marginTop="30dp"/>

            <CheckBox
                    android:text="@string/morning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox11"
                    app:layout_constraintStart_toStartOf="@+id/textView10"
                    app:layout_constraintTop_toBottomOf="@+id/textView10"
                    android:layout_marginTop="20dp"/>

            <CheckBox
                    android:text="@string/midday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox12"
                    app:layout_constraintTop_toTopOf="@+id/checkBox11"
                    app:layout_constraintStart_toEndOf="@+id/checkBox11"
                    android:layout_marginStart="20dp"/>

            <CheckBox
                    android:text="@string/evening"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox13"
                    app:layout_constraintTop_toTopOf="@+id/checkBox12"
                    app:layout_constraintStart_toEndOf="@+id/checkBox12"
                    android:layout_marginStart="20dp"/>

            <CheckBox
                    android:text="@string/night"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox14"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/checkBox11"
                    app:layout_constraintStart_toStartOf="@+id/checkBox11"
                    />

            <CheckBox
                    android:text="@string/latenight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox15"
                    app:layout_constraintTop_toTopOf="@+id/checkBox14"
                    app:layout_constraintStart_toStartOf="@+id/checkBox12"
                    />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</FrameLayout>