<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:background="@drawable/custom_card">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView25"
            android:text="@string/description"
            android:textSize="@dimen/event_card_date_font_size"
            android:textColor="@color/ColorBlackSecondary"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/AmazeDescriptionText"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView25"
            app:layout_constraintStart_toStartOf="@+id/textView25"
            android:textSize="@dimen/event_card_chat_button_font_size"
            android:textColor="@color/colorBlueGreyLow"
            android:fontFamily="@font/open_sans_light"
            tools:text="Is there anything else your friends needs to know about the event"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textView25"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/amazeDescriptionEditText"
            android:fontFamily="@font/open_sans_light"
            android:textSize="@dimen/event_card_chat_button_font_size"
            android:textColor="@color/colorBlueGreyLow"
            app:layout_constraintStart_toStartOf="@+id/textView25"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView25"
            app:layout_constraintEnd_toEndOf="@+id/textView25"/>
</android.support.constraint.ConstraintLayout>