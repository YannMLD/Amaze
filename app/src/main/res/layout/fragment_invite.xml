<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.InviteFragment">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/invite_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/invite_image"
                android:contentDescription="An invite image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="100dp"/>

        <TextView
                android:id="@+id/invite_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/invite_title"
                android:layout_marginTop="30dp"
                android:textSize="40sp"
                android:textColor="@color/colorAccent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintTop_toBottomOf="@+id/invite_image"/>

        <TextView
                android:id="@+id/invite_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/invite_description"
                android:textColor="@color/colorEventCardDetails"
                app:layout_constraintStart_toStartOf="@+id/invite_image"
                app:layout_constraintTop_toBottomOf="@+id/invite_title"
                app:layout_constraintEnd_toEndOf="@+id/invite_image"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:gravity="center"/>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>