<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="EventCardView">
        <attr name="event_card_profile_image" format="reference"/>
        <attr name="event_card_title" format="string"/>
        <attr name="event_card_date" format="string"/>
        <attr name="event_card_host_name" format="string"/>
        <attr name="event_card_description" format="string"/>
        <attr name="event_card_location" format="string"/>
        <attr name="event_card_hour" format="string"/>
    </declare-styleable>

    <declare-styleable name="AmazeLongButton">
        <attr name="button_text" format="string"/>
    </declare-styleable>

    <declare-styleable name="AmazeNextButton_attrs">
        <attr name="text" format="string"></attr>
    </declare-styleable>

    <declare-styleable name="EventSummaryCard_attrs">
        <attr name="title" format="string"/>
        <attr name="host_name" format="string"/>
        <attr name="description" format="string"/>
        <attr name="date" format="string"/>
        <attr name="hour" format="string"/>
        <attr name="location" format="string"/>
        <attr name="price" format="float"/>
    </declare-styleable>

    <declare-styleable name="AmazeEventDescription_attrs">
        <attr name="description_text" format="string"/>
        <attr name="description_is_editable" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="AmazeGuestsComponent_attrs">
        <attr name="guests_comming" format="integer"/>
        <attr name="guests_not_comming" format="integer"/>
        <attr name="guests_maybe" format="integer"/>
    </declare-styleable>

    <declare-styleable name="AmazeEventPrice_attrs">
        <attr name="price_value" format="integer"/>
        <attr name="price_is_editable" format="boolean"/>
    </declare-styleable>

</resources>