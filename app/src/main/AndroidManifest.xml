        <activity android:name=".HomeActivity">

        </activity>
        <activity android:name=".activities.ProfileActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
